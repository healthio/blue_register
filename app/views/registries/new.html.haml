= form_for @registry do |f|
  %fieldset
    %legend Sign up your registry
    = f.label :name
    = f.text_field :name
    = f.label :url
    = f.text_field :url
    = f.label :jwks_uri
    = f.text_field :jwks_uri
    = f.label :trust_bundle_uri
    = f.text_field :trust_bundle_uri
    = f.label :oauth2
    = f.fields_for :oauth2 do |f|
      = f.label :value1
      = f.text_field :value1
      = f.label :value2
      = f.text_field :value2
    %button.btn{:type => "submit"} Submit
= form_for @registry do |f|
  - if @registry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@registry.errors.count, "error")} prohibited this registry from being saved:"
      %ul
        - @registry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :jwks_uri
    = f.text_field :jwks_uri
  .field
    = f.label :trust_bundle_uri
    = f.text_field :trust_bundle_uri
  .field
    = f.label :oauth2
    = f.text_field :oauth2
  .actions
    = f.submit 'Save'
